<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.musica.SettingsController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
         <children>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label text="Media path: " />
                  <Region HBox.hgrow="ALWAYS" />
                  <HBox>
                     <TextField fx:id="mediaPathField" onAction="#saveMediaPath" promptText="Insert path here or...">
                        <tooltip>
                           <Tooltip fx:id="mediaPathTooltip" />
                        </tooltip></TextField>
                     <Button mnemonicParsing="false" onAction="#browseMedia">
                        <graphic>
                           <FontIcon iconLiteral="fas-folder-open" />
                        </graphic>
                     </Button>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#saveMediaPath">
                     <graphic>
                        <FontIcon iconLiteral="fas-save" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label text="Data path: " />
                  <Region HBox.hgrow="ALWAYS" />
                  <HBox>
                     <TextField fx:id="dataPathField" onAction="#saveDataPath" promptText="Insert path here or...">
                        <tooltip>
                           <Tooltip fx:id="dataPathTooltip" text="Empty Tooltip" />
                        </tooltip></TextField>
                     <Button mnemonicParsing="false" onAction="#browseData">
                        <graphic>
                           <FontIcon iconLiteral="fas-folder-open" />
                        </graphic>
                     </Button>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#saveDataPath">
                     <graphic>
                        <FontIcon iconLiteral="fas-save" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
         <StackPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </StackPane.margin>
      </VBox>
   </children>
</StackPane>
